{
  "name": "storefront_backend",
  "version": "0.1.0",
  "description": "Storefront Backend API",
  "main": "dist/server.js",
  "scripts": {
    "start": "node -r tsconfig-paths/register dist/server.js",
    "tsc": "tsc",
    "build": "tsc",
    "dev": "ts-node -r tsconfig-paths/register src/server.ts",
    "rebuild": "npm i && npm run build",
    "test": "NODE_ENV=test ts-node -r tsconfig-paths/register ./node_modules/jasmine/bin/jasmine --config=spec/support/jasmine.json",
    "test:watch": "NODE_ENV=test nodemon --exec 'npm run test'",
    "lint": "eslint .",
    "format": "prettier --write .",
    "clean": "rm -rf dist storefront_api.zip node_modules",
    "clean:build": "rm -rf dist deploy.zip",
    "db:create": "NODE_ENV=production ts-node src/scripts/create-db.ts",
    "db:populate": "NODE_ENV=production ts-node src/scripts/populate-db.ts",
    "db:migrate": "db-migrate up",
    "db:migrate:down": "db-migrate down",
    "db:migrate:reset": "db-migrate reset",
    "db:migrate:test": "NODE_ENV=test db-migrate up --config database.json -e test",
    "verify": "NODE_ENV=production ts-node src/scripts/verify-env.ts",
    "deploy:init": "eb init storefront-api --platform \"Node.js 20\" --region us-east-1",
    "deploy:create": "eb create storefront-env --single --instance-type t2.micro",
    "deploy": "chmod +x ./bin/deploy.sh && ./bin/deploy.sh && eb deploy",
    "setup:prod": "npm run db:create && npm run db:populate",
    "start:prod": "NODE_ENV=production npm start"
  },
  "engines": {
    "node": "20.11.1",
    "npm": "10.x"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.2",
    "typescript": "^5.7.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/body-parser": "^1.19.5",
    "@types/express": "^5.0.0",
    "@types/jasmine": "^5.1.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "22.13.1",
    "@types/pg": "^8.11.11",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "eslint": "^8.56.0",
    "globals": "^15.15.0",
    "jasmine": "^5.6.0",
    "jasmine-spec-reporter": "^7.0.0",
    "jasmine-ts": "^0.4.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.2.4",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript-eslint": "^8.24.1"
  },
  "engines": {
    "node": "20.x"
  },
  "license": "ISC"
}
